# vim:set ft=bash :

# espanso
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

set $mod Mod4
workspace_layout tabbed
font pango:Noto Sans JP 14
hide_edge_borders smart
title_align center

# start a terminal
bindsym $mod+Return exec foot
# kill focused window
bindsym $mod+Shift+d kill
# kill current workspace
bindsym $mod+Shift+a focus parent,kill

# wofi
set $menu wofi -G --show drun insensitive=true width=70% height=70% | xargs swaymsg exec --
bindsym $mod+space exec $menu

bindsym $mod+Shift+space exec ~/.local/bin/hootvoice-toggle.sh

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+f fullscreen
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+u workspace number $ws1
bindsym $mod+i workspace number $ws2
bindsym $mod+o workspace number $ws3

# reload the configuration file
bindsym $mod+Shift+c reload

# resize window
bindsym $mod+r mode "resize"
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

for_window [class="^.*"] border pixel 3
default_border pixel 3
default_floating_border pixel 3

set $bg #1e1e1e
set $fg #d4d4d4
set $br #36363a

client.focused          $br     $br     $fg     $bg       $br
client.focused_inactive $bg     $bg     $fg     $bg       $bg
client.unfocused        $bg     $bg     $fg     $bg       $bg
client.background $bg

bar {
    swaybar_command waybar
}

# volume & brightness
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86Search exec $menu

# screenshot (grimshot)
bindsym $mod+Shift+s exec grimshot --notify copy area
bindsym $mod+Shift+w exec grimshot --notify save area ~/Downloads/screenshot_$(date "+%y%m%d%H%M%S").png
bindsym $mod+Shift+f exec grimshot --notify copy screen

# clipboard (cliphist)
exec --no-startup-id wl-paste --watch cliphist store
bindsym $mod+v exec cliphist list | wofi --show dmenu -G insensitive=true | cliphist decode | wl-copy

bindsym $mod+shift+q exec shutdown -h now
bindsym $mod+shift+b exec bluetoothctl connect 70:5A:6F:62:A9:D1

exec /usr/share/sway/scripts/inactive-windows-transparency.py --opacity 0.7

exec --no-startup-id mako
exec --no-startup-id fcitx5
exec swaymsg "workspace 1; exec foot;"
exec swaymsg "workspace 2; exec brave;"

input type:keyboard {
    repeat_delay 175
    repeat_rate 55
}

input type:touchpad {
    tap enabled
    dwt enabled
    natural_scroll enabled
    pointer_accel 0.25
}

seat * hide_cursor 1000
bindsym $mod+Shift+9 exec swaymsg 'seat seat0 hide_cursor 0'
bindsym $mod+Shift+0 exec swaymsg 'seat seat0 hide_cursor 1000'

no_focus [title="^Peek preview$"]

input "1739:52619:SYNA8004:00_06CB:CD8B_Touchpad" {
    tap enabled
    dwt disabled
    drag enabled
    drag_lock disabled
    middle_emulation disabled
    natural_scroll enabled
}
